<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="landscape"
    android:configChanges="orientation|screenSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeL"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fond"
    tools:context="ceri.androiddamepic.TapisJeu">



    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/carteJ1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </FrameLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/carteJ2"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

    </FrameLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/carteJ3"
        android:layout_above="@+id/linear"
        android:layout_alignStart="@+id/carteJ1">

    </FrameLayout>

     <FrameLayout
         android:layout_width="50sp"
         android:layout_height="70sp"
         android:id="@+id/carteJ4"
         android:layout_alignTop="@+id/carteJ2"
         android:layout_alignParentStart="true">

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:gravity="center"

    android:layout_alignParentBottom="true"
    android:layout_toEndOf="@+id/carteJ3"
        android:layout_weight="4"
    android:layout_alignParentStart="true"></LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:text="Valider"
    android:id="@+id/buttonVal"

    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nord: 0 pts"
        android:id="@+id/textView"
        android:layout_below="@+id/carteJ1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ouest: 0 pts"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/carteJ4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Est: 0 pts"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/carteJ2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sud: 0 pts"
        android:id="@+id/textView4"
        android:layout_above="@+id/carteJ3"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/checkBox"
        android:textColor="#FFFFFF"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
